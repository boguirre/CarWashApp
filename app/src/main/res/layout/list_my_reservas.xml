<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReserva"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Reservas"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFecha"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="En esta seccion se listara los \nque ofrece la empresa"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtServicio"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Hora de Rserva"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/txtVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtHora"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Hora de Rserva"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVehiculo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Hora de Rserva"
                android:textColor="@color/white" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:maxHeight="100dp"
                android:src="@drawable/reserva" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>