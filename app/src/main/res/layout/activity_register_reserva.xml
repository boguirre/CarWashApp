<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterReservaActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#009688" />

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/ic_wave__2_"
        android:layout_marginTop="130dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="197dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/txtNameservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                android:letterSpacing="0.03"/>

            <Switch
                android:id="@+id/swPostAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:text="Disponible Ahora"/>


            <LinearLayout
                android:id="@+id/lnrShowPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"/>

                <Spinner
                    android:id="@+id/spFechaPost"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forget"
                    android:hint="Nombres"
                    android:textColor="#000000"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:spinnerMode="dialog"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <Spinner
                    android:id="@+id/spHoraPost"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forget"
                    android:hint="Nombres"
                    android:textColor="#000000"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:spinnerMode="dialog"
                    android:visibility="visible"/>

                <Switch
                    android:id="@+id/swShowCarSavePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:text="Mostrar Vehiculos Guardados"/>


               <LinearLayout
                   android:id="@+id/lnrShowFormPost"
                   android:visibility="visible"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center_horizontal">


                   <EditText
                       android:id="@+id/edtModeloPost"
                       android:layout_width="300dp"
                       android:layout_height="45dp"
                       android:background="@drawable/forget"
                       android:hint="Modelo"
                       android:textColor="#000000"
                       android:textColorHint="@color/black"
                       android:textStyle="bold"
                       android:textSize="18dp"
                       android:inputType="text"
                       android:layout_marginTop="20dp"
                       android:paddingLeft="20dp"/>

                   <EditText
                       android:id="@+id/edtMarcaPost"
                       android:layout_width="300dp"
                       android:layout_height="45dp"
                       android:background="@drawable/forget"
                       android:hint="Marca"
                       android:textColor="#000000"
                       android:textColorHint="@color/black"
                       android:textStyle="bold"
                       android:textSize="18dp"
                       android:layout_marginTop="20dp"
                       android:inputType="text"
                       android:paddingLeft="20dp"/>

                   <Button
                       android:id="@+id/btnSavePost"
                       android:layout_width="170dp"
                       android:layout_height="50dp"
                       android:background="@drawable/button"
                       android:text="Guardar Vehiculo"
                       android:textSize="12dp"
                       android:textStyle="bold"
                       android:textColor="#FFF"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center_horizontal|bottom"
                       android:layout_marginBottom="20dp" />
               </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnrShowCarSavePost"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Vehiculos"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"/>


                    <Spinner
                        android:id="@+id/spShowCarPost"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/forget"
                        android:hint="Modelo"
                        android:textColor="#000000"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:inputType="numberSigned"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrShowAct"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Hora Disponible"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <Spinner
                    android:id="@+id/spHoraDisp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forget"
                    android:hint="Nombres"
                    android:textColor="#000000"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:visibility="visible"/>


                <Switch
                    android:id="@+id/swShowCarSaveAct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:text="Mostrar Vehiculos Guardados"/>

                <LinearLayout
                    android:id="@+id/lnrShowFormAct"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">


                    <EditText
                        android:id="@+id/edtModeloAct"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/forget"
                        android:hint="Modelo"
                        android:textColor="#000000"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:inputType="text"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"/>

                    <EditText
                        android:id="@+id/edtMarcaAct"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/forget"
                        android:hint="Marca"
                        android:textColor="#000000"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="20dp"
                        android:inputType="text"
                        android:paddingLeft="20dp"/>

                    <Button
                        android:id="@+id/btnSaveAct"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button"
                        android:text="Guardar"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnrShowCarSaveAct"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Vehiculos"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"/>


                    <Spinner
                        android:id="@+id/spShowCarAct"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/forget"
                        android:hint="Modelo"
                        android:textColor="#000000"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:inputType="numberSigned"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

            </LinearLayout>







        </LinearLayout>



    </ScrollView>

    <Button
        android:id="@+id/btnSaveReserva"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Registrar Reserva"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="650dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:layout_gravity="center|top"
        android:layout_marginTop="15dp"
        android:src="@drawable/reserva"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:text="Registrar Reserva"
        android:textColor="@color/white"
        android:layout_gravity="center|top"
        android:layout_marginTop="8dp"
        android:textSize="30dp"
        android:textStyle="bold" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>